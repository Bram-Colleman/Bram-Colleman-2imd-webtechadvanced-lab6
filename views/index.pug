extends layout

block content
  div.header
    img(src="https://www.formula1.com/etc/designs/fom-website/images/f1_logo.svg").logo
  h1 Live scoreboard
  div.container
    div.col
      span.redBull=team1 
      span.redBullScore=team1score
    div.col
      span.mercedes=team2 
      span.mercedesScore=team2score
    div.col
      span.ferrari=team3
      span.ferrariScore=team3score


  span.submit.hidden

  script(src="./javascripts/app.js") 

